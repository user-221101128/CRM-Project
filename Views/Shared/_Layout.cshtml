<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Himachali Bhadane</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="bg-light">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">

                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    CRM App
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <ul class="navbar-nav ms-auto">

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Index">Users</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Companies" asp-action="Index">Companies</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Notes" asp-action="Index">Notes</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contacts" asp-action="Index">Contacts</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Roles" asp-action="Index">Roles</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Business" asp-action="Index">Businesses</a>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    @User.FindFirst("user").Value
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><span class="dropdown-item text-muted">Role: @User.FindFirst("role").Value</span></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Accounts" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>

                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN BODY -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-white border-top py-3 mt-4">
        <div class="container text-center text-muted small">
            &copy; 2024 - Himachali Bhadane  
            @if (User.Identity.IsAuthenticated)
            {
                <span class="ms-2">| Logged in as: <strong>@User.FindFirst("user").Value</strong></span>
            }
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
